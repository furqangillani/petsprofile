<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container mb-4">
  <div class="row">
    <div class="col-lg-4 pb-5">
      <!-- Account Sidebar-->
      <div class="author-card pb-3">
        <div class="author-card-cover" style="background-image: url(https://bootdey.com/img/Content/flores-amarillas-wallpaper.jpeg);">
        </div>
        <div class="author-card-profile">
          <div class="author-card-avatar"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Daniel Adams">
          </div>
          <div class="author-card-details">
            <h5 class="author-card-name text-lg"><%= current_user.profile.first_name %> <%= current_user.profile.last_name %></h5><span class="author-card-position">Joined <%= current_user .created_at.strftime("#{current_user.created_at.day.ordinalize} %B %Y") %></span>
          </div>
        </div>
      </div>
      <div class="wizard">
        <nav class="list-group list-group-flush">
          <%= link_to orders_path ,class: 'list-group-item active' do %>
            <div class="d-flex justify-content-between align-items-center">
              <div><i class="fa fa-shopping-bag mr-1 text-muted"></i>
                <div class="d-inline-block font-weight-medium text-uppercase">Orders List</div>
              </div>
            </div>
          <%end%>
          <%= link_to "#" ,class: 'list-group-item active' do %>
            <div class="d-flex justify-content-between align-items-center">
              <div><i class="fa fa-shopping-bag mr-1 text-muted"></i>
                <div class="d-inline-block font-weight-medium text-uppercase">Orders</div>
              </div>
            </div>
          <%end%>
          <%= link_to "#" ,class: 'list-group-item active' do %>
            <div class="d-flex justify-content-between align-items-center">
              <div><i class="fa fa-shopping-bag mr-1 text-muted"></i>
                <div class="d-inline-block font-weight-medium text-uppercase">Services</div>
              </div>
            </div>
          <%end%>
        </nav>
      </div>
    </div>
    <!-- Wishlist-->
    <div class="col-lg-8 pb-5">
      <% @post.each do |record| %>
      <div class="cart-item d-md-flex justify-content-between">
        <div class="px-3 my-3">
          <a class="cart-item-product" href="#">
            <div class="cart-item-product-thumb">
              <% if record.pictures.present?  %>
              <%= image_tag record.pictures.first %>
                <%end %>
            </div>
            <div class="cart-item-product-info">
              <h4 class="cart-item-product-title"><%= record.description %></h4>
            </div>
          </a>
        </div>
      </div>
      <%end %>
    </div>
  </div>
</div>