<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<p>
  <%= link_to "New post", new_post_path %>
</p>

<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">Description</th>
  </tr>
  </thead>
  <tbody id="post">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </tbody>
</table>


